{
 "name": "commonjs-starter",
 "version": "1.0.0",
 "description": "Node (CommonJS) boilerplate project",
 "main": " src/index.js",
 "repository": {
  "type": "git",
  "url": "git+https://github.com/ferrylinton/node-commonjs-starter.git"
 },
 "keywords": [
  "node",
  "commonjs",
  "eslint",
  "prettier",
  "husky"
 ],
 "author": "Ferry L. H.",
 "license": "ISC",
 "bugs": {
  "url": "https://github.com/ferrylinton/node-commonjs-starter/issues"
 },
 "homepage": "https://github.com/ferrylinton/node-commonjs-starter#readme",
 "scripts": {
  "dev": "node src/index.js",
  "lint": "eslint .",
  "lint:fix": "eslint --fix .",
  "format": "prettier . --write",
  "prepare": "husky install"
 },
 "husky": {
  "hooks": {
   "pre-commit": "lint-staged"
  }
 },
 "lint-staged": {
  "**/*.js": [
   "npm run lint:fix",
   "npm run format",
   "git add"
  ]
 },
 "devDependencies": {
  "eslint": "^8.54.0",
  "eslint-config-prettier": "^9.0.0",
  "eslint-config-standard": "^17.1.0",
  "eslint-plugin-import": "^2.29.0",
  "eslint-plugin-jest": "^27.6.0",
  "eslint-plugin-n": "^16.3.1",
  "eslint-plugin-prettier": "^5.0.1",
  "eslint-plugin-promise": "^6.1.1",
  "husky": "^8.0.0",
  "jest": "^29.7.0",
  "lint-staged": "^15.1.0",
  "prettier": "3.1.0"
 }
}
